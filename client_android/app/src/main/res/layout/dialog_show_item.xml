<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(2h)"
        android:id="@+id/duration_view"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/description_view"
        android:layout_toEndOf="@+id/show_name_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shown name"
        android:id="@+id/show_name_view"
        android:layout_marginStart="19dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/description_view"
        android:layout_weight="0.11"
        android:layout_below="@+id/show_name_view"
        android:layout_alignStart="@+id/show_name_view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="4.5"
        android:id="@+id/rate_view"
        android:layout_above="@+id/description_view"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp" />
</RelativeLayout>